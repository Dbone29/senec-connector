{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.github.dbone29.senec-connector",
  "version": "1.0.0",
  "compatibility": ">=12.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Senec Connector",
    "de": "Senec Connector"
  },
  "description": {
    "en": "Adds support for Senec batteries.",
    "de": "Fügt Unterstützung für Senec-Batterien hinzu."
  },
  "category": [
    "energy"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small-battery-ai.png",
    "large": "/assets/images/large-battery-ai.png",
    "xlarge": "/assets/images/xlarge-battery-ai.png"
  },
  "author": {
    "name": "Daniel Busenius",
    "email": "info@daniel-b.de"
  },
  "drivers": [
    {
      "id": "senec-battery",
      "name": {
        "en": "Senec battery",
        "de": "Senec-Batterie"
      },
      "class": "battery",
      "capabilities": [
        "onoff",
        "measure_battery",
        "measure_current",
        "measure_power",
        "measure_voltage",
        "meter_power.charged",
        "meter_power.discharged"
      ],
      "capabilitiesOptions": {
        "onoff": {
          "title": {
            "en": "Force Charging",
            "de": "Zwangsladen"
          }
        },
        "measure_voltage": {
          "title": {
            "en": "Battery Voltage",
            "de": "Batteriespannung"
          }
        },
        "measure_current": {
          "title": {
            "en": "Battery Current",
            "de": "Batteriestrom"
          }
        },
        "meter_power.charged": {
          "title": {
            "en": "Charged Energy",
            "de": "Geladene Energie"
          }
        },
        "meter_power.discharged": {
          "title": {
            "en": "Discharged Energy",
            "de": "Entladene Energie"
          }
        }
      },
      "energy": {
        "homeBattery": true,
        "meterPowerImportedCapability": "meter_power.charged",
        "meterPowerExportedCapability": "meter_power.discharged"
      },
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/senec-battery/assets/images/small-battery-ai.png",
        "large": "/drivers/senec-battery/assets/images/large-battery-ai.png",
        "xlarge": "/drivers/senec-battery/assets/images/xlarge-battery-ai.png"
      },
      "settings": [
        {
          "id": "ipAddress",
          "type": "text",
          "label": {
            "en": "IP Address",
            "de": "IP-Adresse"
          },
          "placeholder": {
            "en": "Enter the IP address of your Senec Battery",
            "de": "Geben Sie die IP-Adresse Ihrer Senec-Batterie ein"
          },
          "required": true,
          "validator": "regex",
          "regex": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
        }
      ],
      "pair": [
        {
          "id": "set_ip_view"
        }
      ]
    },
    {
      "id": "senec-solar",
      "name": {
        "en": "Senec Solar/Inverter",
        "de": "Senec Solar/Wechselrichter"
      },
      "class": "solarpanel",
      "capabilities": [
        "measure_power",
        "meter_power"
      ],
      "capabilitiesOptions": {
        "measure_power": {
          "title": {
            "en": "Solar Power",
            "de": "Solarleistung"
          }
        },
        "meter_power": {
          "title": {
            "en": "Solar Energy Generated",
            "de": "Erzeugte Solarenergie"
          }
        }
      },
      "energy": {
        "meterPowerExportedCapability": "meter_power"
      },
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/senec-solar/assets/images/small.png",
        "large": "/drivers/senec-solar/assets/images/large.png",
        "xlarge": "/drivers/senec-solar/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "senec-consumption",
      "name": {
        "en": "Senec Home Consumption",
        "de": "Senec Hausverbrauch"
      },
      "class": "sensor",
      "capabilities": [
        "measure_power",
        "meter_power"
      ],
      "capabilitiesOptions": {
        "measure_power": {
          "title": {
            "en": "Home Consumption",
            "de": "Hausverbrauch"
          }
        },
        "meter_power": {
          "title": {
            "en": "Total Home Consumption",
            "de": "Gesamter Hausverbrauch"
          }
        }
      },
      "energy": {
        "cumulative": true,
        "cumulativeImportedCapability": "meter_power"
      },
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/senec-consumption/assets/images/small.png",
        "large": "/drivers/senec-consumption/assets/images/large.png",
        "xlarge": "/drivers/senec-consumption/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "senec-grid",
      "name": {
        "en": "Senec Grid Connection",
        "de": "Senec Netzanschluss"
      },
      "class": "sensor",
      "capabilities": [
        "measure_power",
        "meter_power.imported",
        "meter_power.exported"
      ],
      "capabilitiesOptions": {
        "measure_power": {
          "title": {
            "en": "Grid Power",
            "de": "Netzleistung"
          }
        },
        "meter_power.imported": {
          "title": {
            "en": "Grid Energy Imported",
            "de": "Bezogene Netzenergie"
          }
        },
        "meter_power.exported": {
          "title": {
            "en": "Grid Energy Exported",
            "de": "Eingespeiste Netzenergie"
          }
        }
      },
      "energy": {
        "cumulative": true,
        "cumulativeImportedCapability": "meter_power.imported",
        "cumulativeExportedCapability": "meter_power.exported"
      },
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/senec-grid/assets/images/small.png",
        "large": "/drivers/senec-grid/assets/images/large.png",
        "xlarge": "/drivers/senec-grid/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
